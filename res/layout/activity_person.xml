<LinearLayout
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <include layout="@layout/title_bar"/>
      <LinearLayout 
        		android:layout_height="wrap_content"
       			android:layout_width="fill_parent"
        		android:orientation="horizontal"
        	>
        		<TextView 
            		android:text="姓名："
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            	/>
        		<Spinner
            		android:id="@+id/name"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            	/>
    </LinearLayout>
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <LinearLayout 
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            >
           
    		<LinearLayout 
        		android:layout_height="wrap_content"
       			android:layout_width="fill_parent"
        		android:orientation="horizontal"
        	>
        		<TextView 
            		android:text="年龄："
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            	/>
        		<EditText 
            		android:id="@+id/age"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:background="@null"
            	/>
    		</LinearLayout>
    		<LinearLayout 
        		android:layout_height="wrap_content"
       			android:layout_width="fill_parent"
        		android:orientation="horizontal"
        	>
        		<TextView 
            		android:text="性别："
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            	/>
        		<EditText 
            		android:id="@+id/sex"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:background="@null"
            	/>
    		</LinearLayout>
    		<LinearLayout 
        		android:layout_height="wrap_content"
       			android:layout_width="fill_parent"
        		android:orientation="horizontal"
        	>
        		<TextView 
            		android:text="所住病房："
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            	/>
        		<EditText 
            		android:id="@+id/hosphouse"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:background="@null"
            	/>
    		</LinearLayout>
    		<LinearLayout 
        		android:layout_height="wrap_content"
       			android:layout_width="fill_parent"
        		android:orientation="horizontal"
        	>
        		<TextView 
            		android:text="病床号："
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            	/>
        		<EditText 
            		android:id="@+id/hospbed"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:background="@null"
            	/>
    		</LinearLayout>
    		<LinearLayout 
        		android:layout_height="wrap_content"
       			android:layout_width="fill_parent"
        		android:orientation="horizontal"
        	>
        		<TextView 
            		android:text="入住日期："
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            	/>
        		<EditText 
            		android:id="@+id/startdate"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:background="@null"
            	/>
    		</LinearLayout>
    		<LinearLayout 
        		android:layout_height="wrap_content"
       			android:layout_width="fill_parent"
        		android:orientation="horizontal"
        	>
        		<TextView 
            		android:text="离去日期："
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            	/>
        		<EditText 
            		android:id="@+id/leftdate"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:background="@null"
            	/>
    		</LinearLayout>
    		<LinearLayout 
        		android:layout_height="wrap_content"
       			android:layout_width="fill_parent"
        		android:orientation="horizontal"
        	>
        		<TextView 
            		android:text="陪护人姓名："
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            	/>
        		<EditText 
            		android:id="@+id/accname"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:background="@null"
            	/>
    		</LinearLayout>
    		<LinearLayout 
        		android:layout_height="wrap_content"
       			android:layout_width="fill_parent"
        		android:orientation="horizontal"
        	>
        		<TextView 
            		android:text="陪护人联系方式："
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            	/>
        		<EditText 
            		android:id="@+id/acctel"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:background="@null"
            	/>
    		</LinearLayout>
    		<LinearLayout 
        		android:layout_height="wrap_content"
       			android:layout_width="fill_parent"
        		android:orientation="horizontal"
        	>
        		<TextView 
            		android:text="主治医生："
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            	/>
        		<EditText 
            		android:id="@+id/masterdoctor"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:background="@null"
            	/>
    		</LinearLayout>
    		<Button 
    		    android:id="@+id/ok"
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"
    		    android:text="保存"
    		    />
    		
        </LinearLayout>
    </ScrollView> 
</LinearLayout>
