<LinearLayout
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <include layout="@layout/title_bar"/>
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <LinearLayout 
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            >
            <LinearLayout 
        		android:layout_height="wrap_content"
       			android:layout_width="fill_parent"
        		android:orientation="horizontal"
        	>
        		<TextView 
            		android:text="姓名："
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            	/>
        		<TextView  
            		android:id="@+id/Name"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:background="@null"
            	/>
    		</LinearLayout>
    		<LinearLayout 
        		android:layout_height="wrap_content"
       			android:layout_width="fill_parent"
        		android:orientation="horizontal"
        	>
        		<TextView 
            		android:text="年龄："
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            	/>
        		<TextView 
            		android:id="@+id/age"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:background="@null"
            	/>
    		</LinearLayout>
    		<LinearLayout 
        		android:layout_height="wrap_content"
       			android:layout_width="fill_parent"
        		android:orientation="horizontal"
        	>
        		<TextView 
            		android:text="性别："
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            	/>
        		<TextView  
            		android:id="@+id/Sex"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:background="@null"
            	/>
    		</LinearLayout>
    		<LinearLayout 
        		android:layout_height="wrap_content"
       			android:layout_width="fill_parent"
        		android:orientation="horizontal"
        	>
        		<TextView 
            		android:text="所住病房："
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            	/>
        		<TextView  
            		android:id="@+id/HospHouse"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:background="@null"
            	/>
    		</LinearLayout>
    		<LinearLayout 
        		android:layout_height="wrap_content"
       			android:layout_width="fill_parent"
        		android:orientation="horizontal"
        	>
        		<TextView 
            		android:text="病床号："
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            	/>
        		<TextView 
            		android:id="@+id/HospBed"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:background="@null"
            	/>
    		</LinearLayout>
    		<LinearLayout 
        		android:layout_height="wrap_content"
       			android:layout_width="fill_parent"
        		android:orientation="horizontal"
        	>
        		<TextView 
            		android:text="收费编号："
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            	/>
        		<TextView 
            		android:id="@+id/ChargeNumber"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:background="@null"
            	/>
    		</LinearLayout>
    		<LinearLayout 
        		android:layout_height="wrap_content"
       			android:layout_width="fill_parent"
        		android:orientation="horizontal"
        	>
        		<TextView 
            		android:text="收费项目："
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            	/>
        		<TextView  
            		android:id="@+id/ChargeProject"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:background="@null"
            	/>
    		</LinearLayout>
    		<LinearLayout 
        		android:layout_height="wrap_content"
       			android:layout_width="fill_parent"
        		android:orientation="horizontal"
        	>
        		<TextView 
            		android:text="收费名称："
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            	/>
        		<TextView 
            		android:id="@+id/ChargeName"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:background="@null"
            	/>
    		</LinearLayout>
    		<LinearLayout 
        		android:layout_height="wrap_content"
       			android:layout_width="fill_parent"
        		android:orientation="horizontal"
        	>
        		<TextView 
            		android:text="单价："
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            	/>
        		<TextView 
            		android:id="@+id/Price"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:background="@null"
            	/>
    		</LinearLayout>
    		<LinearLayout 
        		android:layout_height="wrap_content"
       			android:layout_width="fill_parent"
        		android:orientation="horizontal"
        	>
        		<TextView 
            		android:text="计量单位："
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            	/>
        		<TextView 
            		android:id="@+id/MeasureUnits"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:background="@null"
            	/>
    		</LinearLayout>
    		<LinearLayout 
        		android:layout_height="wrap_content"
       			android:layout_width="fill_parent"
        		android:orientation="horizontal"
        	>
        		<TextView 
            		android:text="总费用："
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            	/>
        		<TextView  
            		android:id="@+id/Allincost"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:background="@null"
            	/>
    		</LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
