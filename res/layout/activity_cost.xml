<LinearLayout
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <include layout="@layout/title_bar"/>
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <LinearLayout 
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            >
            <LinearLayout 
        		android:layout_height="wrap_content"
       			android:layout_width="fill_parent"
        		android:orientation="horizontal"
        	>
        		<TextView 
            		android:text="姓名："
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            	/>
        		<TextView  
            		android:id="@+id/Name"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:background="@null"
            	/>
    		</LinearLayout>
    		<LinearLayout 
        		android:layout_height="wrap_content"
       			android:layout_width="fill_parent"
        		android:orientation="horizontal"
        	>
        		<TextView 
            		android:text="年龄："
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            	/>
        		<TextView 
            		android:id="@+id/age"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:background="@null"
            	/>
    		</LinearLayout>
    		<LinearLayout 
        		android:layout_height="wrap_content"
       			android:layout_width="fill_parent"
        		android:orientation="horizontal"
        	>
        		<TextView 
            		android:text="性别："
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            	/>
        		<TextView  
            		android:id="@+id/Sex"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:background="@null"
            	/>
    		</LinearLayout>
    		<LinearLayout 
        		android:layout_height="wrap_content"
       			android:layout_width="fill_parent"
        		android:orientation="horizontal"
        	>
        		<TextView 
            		android:text="所住病房："
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            	/>
        		<TextView  
            		android:id="@+id/HospHouse"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:background="@null"
            	/>
    		</LinearLayout>
    		<LinearLayout 
        		android:layout_height="wrap_content"
       			android:layout_width="fill_parent"
        		android:orientation="horizontal"
        	>
        		<TextView 
            		android:text="病床号："
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            	/>
        		<TextView 
            		android:id="@+id/HospBed"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:background="@null"
            	/>
    		</LinearLayout>
    		<LinearLayout 
        		android:layout_height="wrap_content"
       			android:layout_width="fill_parent"
        		android:orientation="horizontal"
        	>
        		<TextView 
            		android:text="入住日期："
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            	/>
        		<TextView 
            		android:id="@+id/StartDate"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:background="@null"
            	/>
    		</LinearLayout>
    		<LinearLayout 
        		android:layout_height="wrap_content"
       			android:layout_width="fill_parent"
        		android:orientation="horizontal"
        	>
        		<TextView 
            		android:text="离去日期："
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            	/>
        		<TextView  
            		android:id="@+id/LeftDate"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:background="@null"
            	/>
    		</LinearLayout>
    		<LinearLayout 
        		android:layout_height="wrap_content"
       			android:layout_width="fill_parent"
        		android:orientation="horizontal"
        	>
        		<TextView 
            		android:text="已交金额："
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            	/>
        		<TextView 
            		android:id="@+id/PaidAmount"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:background="@null"
            	/>
    		</LinearLayout>
    		<LinearLayout 
        		android:layout_height="wrap_content"
       			android:layout_width="fill_parent"
        		android:orientation="horizontal"
        	>
        		<TextView 
            		android:text="实用金额："
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            	/>
        		<TextView 
            		android:id="@+id/FactPrice"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:background="@null"
            	/>
    		</LinearLayout>
    		<LinearLayout 
        		android:layout_height="wrap_content"
       			android:layout_width="fill_parent"
        		android:orientation="horizontal"
        	>
        		<TextView 
            		android:text="资金结算："
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            	/>
        		<TextView 
            		android:id="@+id/FundSettlement"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:background="@null"
            	/>
    		</LinearLayout>
    		<Button 
    		    android:id="@+id/ok"
    		    android:text="确认"
    		    android:layout_height="wrap_content"
    		    android:layout_width="wrap_content"
    		    />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
